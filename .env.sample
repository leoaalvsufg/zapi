# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your_secret_key_here_change_in_production

# Database Configuration
DATABASE_URL=sqlite:///instance/database.db

# Z-API WhatsApp Configuration (Required)
ZAPI_INSTANCE_ID=your_zapi_instance_id
ZAPI_INSTANCE_TOKEN=your_zapi_instance_token
# Optional: If you have a custom Z-API URL
# ZAPI_SEND_TEXT_URL=https://api.z-api.io/instances/YOUR_INSTANCE/token/YOUR_TOKEN/send-text
# Optional: Some Z-API setups require this
# ZAPI_CLIENT_TOKEN=your_client_token

# Rate Limiting Configuration
RATE_LIMIT_DEFAULT=30 per minute
RATE_LIMIT_SEND=10 per minute
RATE_LIMIT_BULK=2 per minute

# AI Integration (Optional)
# For OpenRouter integration
OPENROUTER_API_KEY=your_openrouter_api_key
# For Ollama integration (local AI)
OLLAMA_HOST=http://localhost:11434

# Agnus Framework (Optional)
AGNUS_ENABLED=false

# Scheduler Configuration
SCHEDULER_TIMEZONE=America/Sao_Paulo

# Logging
LOG_LEVEL=INFO